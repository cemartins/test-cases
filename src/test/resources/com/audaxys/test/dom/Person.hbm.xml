<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>

	<class name="com.audaxys.test.dom.Person" table="PERSON" lazy="true">
		<id name="id" type="integer"> 
			<generator class="native"/> 
		</id> 
	
		<property name="name" type="string" />
		
		<many-to-one name="favoriteCd" class="com.audaxys.test.dom.AudioCd" lazy="proxy">
            <column name="audioCd_id" not-null="false" />
        </many-to-one>
		
	</class>

</hibernate-mapping>
